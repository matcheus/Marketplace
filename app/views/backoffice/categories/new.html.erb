<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-5">
        <h1>New Category</h1>
        <br>
        <%= form_for([:backoffice, @category]) do |f| %>
          <div class="form-group">
            <label>Category</label>
            <%= f.text_field :description, class: "form-control", placeholder: "Category Description" %>
          </div>
          <button type="submit" class="btn btn-default">Save Category</button>
        <% end %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
